<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <!--
     El atributo src carga la imagen
     desde la carpeta drawable

     El atributo scaleType escala
     la imagen cargada segun corresponda
     -->
    <ImageView
        android:id="@+id/mainActivity_imageViewPersonaje"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@drawable/cersei"
        android:scaleType="center"
        />

    <Button
        android:id="@+id/mainActivity_botonSumar"
        android:textSize="30dp"
        android:text="sumar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/mainActivity_contador"
        android:layout_margin="20dp"
        android:textSize="60dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
 />
    <Button
        android:id="@+id/mainActivity_botonRestar"
        android:textSize="30dp"
        android:text="Restar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


</LinearLayout>