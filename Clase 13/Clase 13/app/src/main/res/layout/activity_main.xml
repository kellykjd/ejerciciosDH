<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"><!-- con esto puedo orientar los objetos unos debajo del otro -->

<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Primer Clase Android"
    android:textAllCaps="true"
    android:textSize="35sp"
    android:textAlignment="center"/> <!-- Si queremos que se pueda modificar el tamaÃ±o de un texto, se selecciona sp-->

<EditText
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:hint="Ingrese texto aqui"/>

<Button
    android:id="@+id/boton_vacio"
    android:layout_width="200dp"
    android:layout_height="200dp"
    android:background="#2196F3"/>

<Button
    android:id="@+id/boton_texto"
    android:layout_width="wrap_content"
    android:layout_height="200dp"
    android:text="Hola"
    />

</LinearLayout>